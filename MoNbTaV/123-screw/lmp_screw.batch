#!/bin/bash -l
#SBATCH --job-name=lsr
#SBATCH --output=lmp.out
#SBATCH --error=lmp.err
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=20
#SBATCH -t 168:00:00

# Defining the executable and scratch directory

cd ${SLURM_SUBMIT_DIR}

rm strain-stress
rm dump.*

module load intel/18
module load lammps/3Mar20
/bin/hostname

# execute lammps
echo "begin lammps"
echo "the job is ${SLURM_JOB_ID}"

mpirun -np $SLURM_NPROCS /sw/csc/lammps/3Mar20/lmp -in peierls_screw_pad_y_normal.in

echo "lammps out"
